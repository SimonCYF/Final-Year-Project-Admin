<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.finalyearprojectadmin">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FinalYearProjectAdmin">
        <activity
            android:name=".MainActivity"
            android:windowSoftInputMode="adjustPan"
            android:exported="true"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".party.PartyRegister"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".MainMenu"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".candidates.CandidateRegister"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".senator.SenatorRegister"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".senator.SenatorEdit"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".senator.SenatorEditInfo"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".senator.SenatorDelete"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".admin.AdminVerifyVoter"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".candidates.CandidateEdit"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".candidates.CandidateEditInfo"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".candidates.CandidateDelete"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".party.PartyEdit"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".party.PartyEditInfo"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".party.PartyDelete"/>

        <activity android:name=".admin.AdminRegister"
            android:windowSoftInputMode="adjustPan"/>

    </application>

</manifest>